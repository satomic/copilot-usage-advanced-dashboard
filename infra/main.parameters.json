{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "environmentName": {
        "value": "${AZURE_ENV_NAME}"
      },
      "location": {
        "value": "${AZURE_LOCATION}"
      },
      "updateGrafanaExists": {
        "value": "${SERVICE_UPDATEGRAFANA_RESOURCE_EXISTS=false}"
      },
      "cpuAdUpdaterExists": {
        "value": "${SERVICE_CPUADUPDATER_RESOURCE_EXISTS=false}"
      },
      "elasticSearchExists": {
        "value": "${SERVICE_ELASTIC_SEARCH_RESOURCE_EXISTS=false}"
      },
      "grafanaExists": {
        "value": "${SERVICE_GRAFANA_RESOURCE_EXISTS=false}"
      },
      "elasticSearchImageName": {
        "value": "${SERVICE_ELASTIC_SEARCH_IMAGE_NAME}"
      },
      "grafanaImageName": {
        "value": "${SERVICE_GRAFANA_IMAGE_NAME}"
      },
      "githubPat": {
        "value": "${GITHUB_PAT}"
      },
      "githubOrganizationSlugs": {
        "value": "${GITHUB_ORGANIZATION_SLUGS}"
      },
      "grafanaUsername": {
        "value": "${GRAFANA_USERNAME}"
      },
      "grafanaPassword": {
        "value": "${GRAFANA_PASSWORD}"
      },
      "updateGrafanaDefinition": {
        "value": {
          "cpu": "0.25",
          "memory": "0.5Gi",
          "triggerType": "Manual",
          "settings": [
            {
              "name": "ELASTICSEARCH_URL",
              "value": "http://elastic-search:80"
            },
            {
              "name": "GRAFANA_URL",
              "value": "http://grafana:80"
            }
          ]
        }
      },
      "cpuAdUpdaterDefinition": {
        "value": {
          "cpu": "0.25",
          "memory": "0.5Gi",
          "triggerType": "Schedule",
          "cronExpression": "0 */1 * * *",
          "settings": [
            {
              "name": "LOG_PATH",
              "value": "logs"
            },
            {
              "name": "ELASTICSEARCH_URL",
              "value": "http://elastic-search:80"
            }
          ]
        }
      },
      "elasticSearchDefinition": {
        "value": {
          "cpu": "1.0",
          "memory": "2.0Gi",
          "settings": [ 
          ]
        }
      },
      "grafanaDefinition": {
        "value": {
          "cpu": "0.5",
          "memory": "1.0Gi",
          "settings": [
            {
              "name": "GF_LOG_LEVEL",
              "value": "debug"
            },
            {
              "name": "GF_SECURITY_ADMIN_USER__FILE",
              "value": "/run/secrets/admin_user"
            },
            {
              "name": "GF_SECURITY_ADMIN_PASSWORD__FILE",
              "value": "/run/secrets/admin_password"
            },
            {
              "name": "GF_SERVER_HTTP_PORT",
              "value": "80"
            }
          ]
        }
      },
      "principalId": {
        "value": "${AZURE_PRINCIPAL_ID}"
      }
    }
}
